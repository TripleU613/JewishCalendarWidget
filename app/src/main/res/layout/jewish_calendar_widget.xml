<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="16dp"
    android:clipToPadding="true">

    <!-- Huge Time Display -->
    <TextClock
        android:id="@+id/widget_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:format12Hour="h:mm"
        android:format24Hour="h:mm"
        android:textColor="#FFFFFF"
        android:textSize="96sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-thin"
        android:letterSpacing="0.05" />

    <!-- English Date -->
    <TextView
        android:id="@+id/gregorian_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_clock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="normal"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textAlignment="center" />

    <!-- Hebrew Date -->
    <TextView
        android:id="@+id/hebrew_date_combined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gregorian_date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:textColor="#FFFFFF"
        android:textDirection="rtl"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/davidlibre"
        android:gravity="center"
        android:textAlignment="center" />

</RelativeLayout>
